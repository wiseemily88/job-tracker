<h1>All Companies</h1>

<div class="row" >
  <% @companies.each do |company| %>
    <div class="well">
  <div class=company_<%= company.id %>>
    <td><%= link_to "#{company.name}", company_path(company), class: 'btn btn-primary btn-lg' %></td>
    <td><%= link_to "Edit", edit_company_path(company), class: 'btn btn-success btn-sm' %></td>
    <td><%= link_to "Delete", company_path(company), method: "delete", class: 'btn btn-danger btn-sm' %></td>
  </div> <br>
  <% end %>
</div>
</div>
<td><%= link_to "Add a New Company", 'companies/new', class: 'btn btn-info'  %></td>
